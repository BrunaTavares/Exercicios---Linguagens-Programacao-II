<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
	<title>Post NOW</title>
	<link rel="stylesheet" href="/stylesheet_login.css"> 
	<style>
		body 		{ padding-top:80px; }
	</style>
</head>
<body>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-sign-in"></span> Login</h1>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <div class="form-group">
                    <!--<label>Username</label>-->
                    <input type="text" class="form-control" name="username"  placeholder="Username">
                </div>
                <div class="form-group">
                    <!--<label>Password</label>-->
                    <input type="password" class="form-control" name="password" placeholder="Password" >
                </div>
                <div class="form-group">
                    <label class="info">Remember Me</label>
                    <input type="checkbox" class="check" name="remember" placeholder="Remember Me" value="yes">
                </div>
                <button type="submit" class="btn btn-primary btn-block btn-large">Login</button>
            </form>
			<p class="info">Need an account?<a class ="link" href="/signup">Signup</a></p>
            <p class="info">Or go <a class="link" href="/">home</a>.</p>
        </div>
    </div>
</body>
</html>
